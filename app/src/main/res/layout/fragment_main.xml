<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    
    <TextView
        android:id="@+id/mainnom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom:"
        android:layout_marginTop="80dp"
        android:textColor="#000"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/mainprenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PrÃ©nom: "
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000"
        android:layout_below="@+id/mainnom"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/mainemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000"
        android:layout_below="@+id/mainprenom"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/modifpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modification du mot de passe de votre compte: "
        android:textColor="#000"
        android:layout_below="@+id/mainemail"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/nvmdp"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:hint="Entrer le nouveau mot de passe"
        android:layout_below="@id/modifpass"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000"/>
    <EditText
        android:id="@+id/confirmnvmdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Confirmer le nouveau mot de passe"
        android:layout_below="@id/nvmdp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000"/>
    <Button
        android:id="@+id/modifiermdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier"
        android:layout_below="@+id/confirmnvmdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#0083b0"
        android:elevation="6dp"
        android:scaleType="center"
        android:src="@drawable/ic_baseline_person_add_24"
        app:fabSize="normal" />


</RelativeLayout>